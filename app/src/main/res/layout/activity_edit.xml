<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_prod"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Produkt"
        />

    <EditText
        android:id="@+id/et_prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_qu"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Ilość" />

    <EditText
        android:id="@+id/et_qu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_prod"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_pr"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Cena" />

    <EditText
        android:id="@+id/et_pr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/et_qu"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_oki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="OK"
        android:layout_below="@+id/et_pr"
        android:layout_centerHorizontal="true" />

</RelativeLayout>